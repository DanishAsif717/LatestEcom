@model IEnumerable<E_Book_eproject.Models.CheckoutViewModel>

@{
    ViewData["Title"] = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Area Start-->
<div class="slider-area">
    <div class="single-slider slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center">
                        <h2>Cart List</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero Area End-->
<!-- Cart Area Start-->
<section class="cart_area section_padding">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="media">
                                        <div class="d-flex">
                                            <!-- Inline CSS to set image size -->
                                            <img src="@item.Image" class="img-fluid" style="width: 100px; height: 100px;" alt="@item.Name" />
                                        </div>
                                        <div class="media-body">
                                            <p>@item.Name</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <h5>@item.Price</h5>
                                </td>
                                <td>
                                    <h5>@item.Quantity</h5>
                                </td>
                                <td>
                                    <h5>@(item.Quantity * item.Price)</h5>
                                </td>
                                <td>
                                    <form asp-action="Delete" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fa fa-trash"></i> 
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Total Amount Section -->
                <div>
                    <h4>Total Amount: @Model.Sum(i => i.Quantity * i.Price)</h4>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Cart Area End-->
<!-- Next Button -->
<tr class="bottom_button">
    <td>
        <a class="btn_1" asp-action="checkout" >Next</a>
    </td>
</tr>
