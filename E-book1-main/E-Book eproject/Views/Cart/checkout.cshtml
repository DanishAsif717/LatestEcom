@model E_Book_eproject.Models.Order

@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section Start -->
<div class="slider-area">
    <div class="single-slider slider-height2 d-flex align-items-center justify-content-center" style="background: url('/path-to-hero-background.jpg') no-repeat center center; background-size: cover;">
        <div class="container text-center">
            <h2 class="hero-title text-white">Checkout</h2>
        </div>
    </div>
</div>
<!-- Hero Section End -->
<!-- Checkout Form Section Start -->
<section class="checkout_area section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="text-center mb-4">Order Information</h4>
                        <hr />

                        <form asp-action="checkout" method="get">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <!-- Delivery Distance Input -->
                            <div class="form-group">
                                <label for="deliveryDistance" class="control-label">Delivery Distance (in kilometers)</label>
                                <input id="deliveryDistance" name="deliveryDistance" type="number" class="form-control" placeholder="Enter distance in km" min="0" step="0.1" value="@ViewBag.DeliveryDistance" />
                            </div>

                            <!-- Submit Button -->
                            <div class="form-group text-center">
                                <input type="submit" value="Calculate Total" class="btn btn-primary btn-block btn-lg" />
                            </div>
                        </form>

                        <!-- Display Calculation Results -->
                        @if (ViewBag.Total != null)
                        {
                            <div class="mt-4">
                                <h5>@ViewBag.Message</h5>
                                <h4>Total Delivery Charges: $@ViewBag.Total</h4>
                            </div>
                        }

